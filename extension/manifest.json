{
	"name": "GitHub Notifier",
	"version": "2.1.0",
	"description": "Displays your GitHub notifications unread count",
	"homepage_url": "https://github.com/sindresorhus/github-notifier-chrome",
	"manifest_version": 2,
	"minimum_chrome_version": "40",
	"icons": {
		"16": "icon-16.png",
		"48": "icon-48.png",
		"128": "icon-128.png"
	},
	"permissions": [
		"alarms",
		"activeTab"
	],
	"background": {
		"persistent": false,
		"scripts": [
			"api.js",
			"main.js"
		]
	},
	"browser_action": {
		"default_icon": {
			"19": "icon-19.png",
			"38": "icon-38.png"
		}
	},
	"options_page": "options.html",
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	}
}
