{
	"private": true,
	"scripts": {
		"release": "npm run build && webstore upload --source=extension --auto-publish",
		"lint": "xo && stylelint --fix source/*.css",
		"test": "npm run lint && cross-env BABEL_ENV=testing ava",
		"build": "webpack --mode=production",
		"watch": "webpack --mode=development --watch"
	},
	"devDependencies": {
		"ava": "*",
		"babel-core": "^6.26.2",
		"babel-loader": "^7.1.4",
		"babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
		"chrome-stub": "^1.3.2",
		"chrome-webstore-upload-cli": "^1.0.3",
		"copy-webpack-plugin": "^4.5.1",
		"cross-env": "^5.1.4",
		"istanbul": "^0.4.0",
		"moment": "^2.14.1",
		"p-immediate": "^2.1.0",
		"parse-link-header": "^1.0.1",
		"sinon": "^4.5.0",
		"stylelint": "^9.2.0",
		"stylelint-config-xo": "*",
		"uglifyjs-webpack-plugin": "^1.2.5",
		"webext-domain-permission-toggle": "0.0.2",
		"webext-options-sync": "^0.15.1",
		"webextension-polyfill": "^0.2.1",
		"webpack": "^4.6.0",
		"webpack-cli": "^2.0.15",
		"xo": "*"
	},
	"ava": {
		"files": [
			"test/*-test.js"
		]
	},
	"xo": {
		"envs": [
			"browser"
		],
		"ignores": [
			"distribution"
		],
		"rules": {
			"import/no-unassigned-import": "off",
			"no-unused-vars": [
				2,
				{
					"varsIgnorePattern": "^h$"
				}
			],
			"function-paren-newline": "off",
			"unicorn/no-unsafe-regex": "off"
		},
		"globals": [
			"browser"
		]
	},
	"stylelint": {
		"extends": "stylelint-config-xo",
		"rules": {
			"selector-type-no-unknown": null,
			"declaration-no-important": null,
			"property-no-vendor-prefix": null,
			"no-descending-specificity": null,
			"property-blacklist": null,
			"selector-class-pattern": null,
			"selector-max-class": null,
			"rule-empty-line-before": null,
			"at-rule-empty-line-before": null,
			"selector-max-compound-selectors": null
		}
	}
}
