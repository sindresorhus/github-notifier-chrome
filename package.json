{
  "repository": {
    "type": "git",
    "url": "sindresorhus/notifier-for-github-chrome"
  },
  "scripts": {
    "release": "webstore upload --source=extension --auto-publish",
    "test": "xo && ava",
    "build": "npm run build-main && npm run build-options",
    "build-main": "rollup -i extension/main.js -o extension/out/main.js -f umd -n main",
    "build-options": "rollup -i extension/options.js -o extension/out/options.js -f umd -n options"
  },
  "devDependencies": {
    "chrome-webstore-upload-cli": "^1.0.3",
    "ava": "latest",
    "chrome-stub": "^1.3.2",
    "istanbul": "^0.4.0",
    "moment": "^2.14.1",
    "rollup": "^0.34.10",
    "sinon": "^1.15.4",
    "url-search-params": "^0.5.0",
    "xo": "*"
  },
  "ava": {
    "files": "test/*-test.*"
  },
  "xo": {
    "esnext": true,
    "envs": [
      "browser"
    ],
    "globals": [
      "chrome",
      "API",
      "URLSearchParams",
      "BadgeService",
      "DefaultsService",
      "PersistenceService",
      "PermissionsService",
      "NotificationsService",
      "NetworkService",
      "TabsService"
    ]
  },
  "license": "MIT"
}
